<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shapes_around"
        android:orientation="vertical"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_content_number"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="编号："
                    android:textColor="#ff9c00"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_content_com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="厂名"
                    android:textColor="#ff9c00"
                    android:textSize="20dp" />



            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_content_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起点"
                    android:textColor="#ff9c00"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  ——  "
                    android:textColor="#ff9c00"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_content_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="终点"
                    android:textColor="#ff9c00"
                    android:textSize="20dp" />



            </LinearLayout>


        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_content_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="价格："
                    android:textColor="#ff9c00"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/tv_content_updown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="有无上下货"
                    android:textColor="#ff9c00"
                    android:textSize="20dp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="70dp"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/tv_content_haveordernumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="有无回单"
                    android:textColor="#ff9c00"
                    android:textSize="20dp" />



            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
