<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:background="@color/top_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/top_tv_title"
            style="@style/top_title_text"
            android:text="货车记账" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/top_rl_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/top_ib_left"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_back" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/top_rl_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/top_ib_right"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_save" />

        <Button
            android:id="@+id/top_btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="2017-08"
            android:textColor="@color/mainBlue"
            android:textSize="18dp"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>
